<div class="recap__title">Mes prestations</div>
<div class="recap__cart">
    {% if loadedCart and loadedCart is not empty %}
        {% if loadedCart['sum'] == '0' %}
            <span class="noproduct">{{ 'Public.Cart.NoPrestation'|trans }}<br>{{ 'Public.Cart.Added'|trans }}</span>
        {% else %}
            {% for key,cartLine in loadedCart %}
                {% if key != 'sum' %}
                    <div class="recap__item">

                        <div class="quantity">{{ cartLine['qtty'] }}x</div>
                        <div class="title">{{ cartLine['pName'] }}</div>
                        <div class="delete buttonDeleteProduct" id="buttonDeleteProduct_{{ key }}"
                             data-url="{{ path('paprec_public_corp_chantier_subscription_removeContent', {cartUuid: cartUuid, categoryId: 'categoryTmp', productId: 'productTmp'}) }}"></div>
                        <div class="info">{{ cartLine['cName'] }}</div>
                        <div class="clearfix"></div>
                    </div>
                {% endif %}
            {% endfor %}
        {% endif %}
    {% endif %}

    <div class="recap__price">
        <div class="left">
            {{ 'Public.Cart.ForfaitRecyclage'|trans|nl2br }}
        </div>
        <div class="right no-flex">
            <span>
                {% if loadedCart and loadedCart is not empty %}{{ loadedCart['sum']|formatAmount(null, app.request.locale) }}{% else %}0{% endif %}â‚¬
            </span> HT
        </div>
    </div>
</div>
<div class="recap__info">
    {{ 'Public.Cart.Including'|trans|nl2br }}
</div>
