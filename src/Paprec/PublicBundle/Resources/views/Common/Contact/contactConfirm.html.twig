{% block whoare %}
{% endblock %}

{% block sidebar %}
    {# Définition des menus affichés dans la sidebar #}
    {% set besoin = 'active' %}
    {% set confirmation = 'active' %}
    {{ parent() }}
{% endblock %}

{% block sidebar_info %}
    {{ render(controller('PaprecPublicBundle:Common:getSideBarInfo')) }}
{% endblock %}

{% block main_content_stepper %}
    {% if cart is defined %}
        <input type="hidden" id="divisionType" value="{{ cart.division }}">
    {% endif %}
    <div class="step">
        <div class="step__sucess">
            <div class="step__sucess__container">
                <div class="step__sucess__container__left">
                </div>
                <div class="step__sucess__container__right">
                    <div class="title">{{ 'Public.Confirm.Thanks'|trans|upper }}</div>
                    <div class="content">{{ 'Public.Confirm.RequestReceived'|trans }}</div>
                </div>
            </div>
        </div>
        <div class="bold">{% if contactUs.civility == 'M' %}{{ 'General.Mr'|trans }}{% else %}{{ 'General.Mme'|trans }}{% endif %} {{ contactUs.firstName }} {{ contactUs.lastName }}
            ,
        </div>

        <div class="greennotice">
            {{ 'Public.Confirm.AgencyContact'|trans }}
        </div>

        <a href="{{ paprec_public_site_url }}"
           class="backtohome button button--green">{{ 'Public.Cart.BackHome'|trans }}</a>

    </div>
{% endblock %}

