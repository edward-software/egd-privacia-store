{% extends 'base_public.html.twig' %}
{% block main_content %}
    <section class="page-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-6 col-12">
                    <h2>Sélectionnez les produits souhaités
                        pour créer votre demande de devis en 3 étapes.
                    </h2>
                    <div class="divider"></div>
                </div>
            </div>


            <div class="row product-container">
                {% for product in products %}
                    <div class="col-md-6 product" id="productContainer_{{ product.id }}">
                        <div class="row">
                            <div class="col-xl-4">
                                <div class="product__image">
                                    <img src="{% if product.pilotPictures|length > 0 %}{{ asset('/uploads/pictos/' ~ product.pilotPictures[0].path) }}{% endif %}"
                                         alt="#" class="">
                                </div>
                            </div>
                            <div class="col-xl-8">
                                <div class="product__title">
                                    <h3>{{ product|productLabelTranslation(lang) }}</h3>
                                </div>
                                <div class="product__description">
                                    <p>{{ product|productLabelTranslation(lang, 'shortDescription') }}</p>
                                </div>
                                <div class="product__quantity">
                                    {{ 'Public.Catalog.Quantity'|trans }}
                                    {% set qtty = '' %}
                                    {% for item in cart.content %}
                                        {% if item['pId'] == product.id %}
                                            {% set qtty = item['qtty'] %}
                                        {% endif %}
                                    {% endfor %}
                                    <select name=""
                                            id="quantityProductSelect_{{ product.id }}">
                                        {% for i in 1..10 %}
                                            {% if i == qtty %}
                                                <option value="{{ i }}"
                                                        selected="selected">{{ i }}</option>
                                            {% else %}
                                                <option value="{{ i }}">{{ i }}</option>

                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                    <button type="button"
                                            data-url="{{ path('paprec_public_catalog_addContent', {cartUuid: cart.id}) }}"
                                            data-product="{{ product.id }}"
                                            class="btn btn__blue addProductToQuoteButton">
                                        {{ 'Public.Catalog.AddToQuote'|trans }}</button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}


            </div>

            <div class="row">
                <div class="col-lg-6 offset-lg-6 col-12">
                    <div class="row">
                        <div class="col">
                            <div class="devis">
                                <h3>Devis</h3>

                                <div class="devis__recap" id="devis-recap">
                                    {% for product in products %}
                                        {% for item in cart.content %}
                                            {% if item['pId'] == product.id %}
                                                <div class="devis__recap__item" id="devis-recap-item-{{ product.id }}">
                                                    <p class="mr-2 font-weight-bold">{{ item['qtty'] }}x</p>
                                                    <p>{{ product|productLabelTranslation(lang) }}</p>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    {% endfor %}
                                </div>

                                <h3>Fréquence de collecte</h3>

                                <!-- Group of default radios - option 1 -->
                                <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" id="defaultGroupExample1"
                                           name="groupOfDefaultRadios" checked>
                                    <label class="custom-control-label" for="defaultGroupExample1">à la demande</label>
                                </div>

                                <!-- Group of default radios - option 2 -->
                                <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" id="defaultGroupExample2"
                                           name="groupOfDefaultRadios">
                                    <label class="custom-control-label" for="defaultGroupExample2">régulière :</label>
                                </div>

                                <div class="devis__frequence">
                                    <div>
                                        <select>
                                            <option value="1" selected>1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                        </select>
                                        fois tout les
                                        <select>
                                            <option value="1" selected>1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                        </select>
                                        <select>
                                            <option value="1" selected>mois</option>
                                            <option value="2">trimestre</option>
                                            <option value="3">an</option>
                                        </select>
                                    </div>
                                    <button type="button" class="btn btn__blue btn__large">Étape suivante</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
