{% extends 'base_public.html.twig' %}
{% block breadcrumb_title %}
    {{ 'Public.Catalog.BreadcrumbTitle'| trans({}, "messages", locale) }}
{% endblock %}
{% block main_content %}
    <section class="page-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-6 col-12">
                    <h2>{{ 'Public.Catalog.Title'| trans({}, "messages", locale) }}
                    </h2>
                    <div class="divider"></div>
                </div>
            </div>


            <div class="row product-container">
                {% for product in products %}
                    <div class="col-md-6 product" id="productContainer_{{ product.id }}">
                        <div class="row">
                            <div class="col-xl-4">
                                <div class="product__image">
                                    <img src="{% if product.pilotPictures|length > 0 %}{{ asset('/uploads/pictos/' ~ product.pilotPictures[0].path) }}{% endif %}"
                                         alt="#" class="">
                                </div>
                            </div>
                            <div class="col-xl-8">
                                <div class="product__title">
                                    <h3>{{ product|productLabelTranslation(locale) }}</h3>
                                </div>
                                <div class="product__description">
                                    <p>{{ product|productLabelTranslation(locale, 'shortDescription') }}</p>
                                </div>
                                <div class="product__quantity">
                                    {{ 'Public.Catalog.Quantity'| trans({}, "messages", locale) }}
                                    {% set qtty = '' %}
                                    {% for item in cart.content %}
                                        {% if item['pId'] == product.id %}
                                            {% set qtty = item['qtty'] %}
                                        {% endif %}
                                    {% endfor %}
                                    <select name=""
                                            id="quantityProductSelect_{{ product.id }}">
                                        {% for i in 1..10 %}
                                            {% if i == qtty %}
                                                <option value="{{ i }}"
                                                        selected="selected">{{ i }}</option>
                                            {% else %}
                                                <option value="{{ i }}">{{ i }}</option>

                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                    <button type="button"
                                            data-url="{{ path('paprec_public_catalog_addContent', {locale: locale, cartUuid: cart.id}) }}"
                                            data-product="{{ product.id }}"
                                            class="btn btn__blue addProductToQuoteButton">
                                        {{ 'Public.Catalog.AddToQuote'| trans({}, "messages", locale) }}</button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}


            </div>

            <div class="row">
                <div class="col-lg-6 offset-lg-6 col-12">
                    <div class="row">
                        <div class="col">
                            <div class="devis">
                                <h3>{{ 'Public.Catalog.Quote'| trans({}, "messages", locale) }}</h3>

                                <div class="devis__recap" id="devis-recap">
                                    {% for product in products %}
                                        {% for item in cart.content %}
                                            {% if item['pId'] == product.id %}
                                                <div class="devis__recap__item" id="devis-recap-item-{{ product.id }}">
                                                    <p class="mr-2 font-weight-bold">{{ item['qtty'] }}x</p>
                                                    <p>{{ product|productLabelTranslation(locale) }}</p>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    {% endfor %}
                                </div>

                                <h3>{{ 'Public.Catalog.Collect-frequency'| trans({}, "messages", locale) }}</h3>

                                <!-- Group of default radios - option 1 -->
                                <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" id="frequencyButton1"
                                           value="ponctual"
                                           name="groupOfDefaultRadios" checked>
                                    <label class="custom-control-label" for="frequencyButton1">{{ 'Public.Catalog.OnDemand'| trans({}, "messages", locale) }}</label>
                                </div>

                                <!-- Group of default radios - option 2 -->
                                <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" id="frequencyButton2"
                                           value="regular"
                                           name="groupOfDefaultRadios">
                                    <label class="custom-control-label" for="frequencyButton2">{{ 'Public.Catalog.Regular'| trans({}, "messages", locale) }} : </label>
                                </div>

                                <div class="devis__frequence">
                                    <div>
                                        <select disabled class="catalog-frequency-select" id="catalog_frequency_times_select">
                                            <option value="1" selected>1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                        </select>
                                        fois par
                                        <select disabled class="catalog-frequency-select" id="catalog_frequency_interval_select">
                                            <option value="week" selected>{{ 'Public.Catalog.Week'| trans({}, "messages", locale) }}</option>
                                            <option value="month" selected>{{ 'Public.Catalog.Month'| trans({}, "messages", locale) }}</option>
                                            <option value="quarter">{{ 'Public.Catalog.Quarter'| trans({}, "messages", locale) }}</option>
                                            <option value="year">{{ 'Public.Catalog.Year'| trans({}, "messages", locale) }}</option>
                                        </select>
                                    </div>
                                    <button type="button"
                                            class="btn btn__blue btn__large"
                                            data-url="{{ path('paprec_public_contact_index', {locale: locale, cartUuid: cart.id}) }}"
                                            data-ajax="{{ path('paprec_public_catalog_addFrequency', {locale: locale, cartUuid: cart.id}) }}"
                                            id="catalog_next_step_button">
                                        {{ 'Public.Catalog.NextStep'| trans({}, "messages", locale) }}
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
