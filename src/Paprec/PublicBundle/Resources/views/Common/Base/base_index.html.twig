{% block main_content_stepper %}
    <form action="#">
        <div class="step step--index">
            <div class="step__left">
                <div class="step__title">{{ 'Public.Home.Recycle'|trans }}</div>
            </div>
            <div class="step__right">
                <select class="input" id="divisionSelect"
                        data-url="{{ path('paprec_public_corp_home_addDivision', {cartUuid: cart.id , division: 'divisionTmp'}) }}"
                        style="color:{% if cart.division == 'DI' %}#95c220{% elseif cart.division == 'CHANTIER' %}#e59437{% elseif cart.division == 'D3E' %}#b8369a{% elseif cart.division == '5FLUX' %}#2B6AB3{% endif %};">
                    <option disabled selected value> {{ 'Public.Cart.ChooseTrash'|trans }} </option>
                    {% for key,division in divisions %}
                        <option value="{{ key }}" {% if key == cart.division %} selected="selected"{% endif %}
                                style="color:{% if key == 'DI' %}#95c220{% elseif key == 'CHANTIER' %}#e59437{% elseif key == 'D3E' %}#b8369a{% else %}#2B6AB3{% endif %};">{{ division }}</option>
                    {% endfor %}
                </select>
                {% block cinq_flux %}

                {% endblock %}
            </div>
            {% if cart.latitude is defined and cart.latitude != '' and cart.longitude is defined and cart.longitude != '' and cart.division is defined and cart.division in ['DI', 'D3E', 'CHANTIER'] %}
                <div class="step__agency"
                     data-url="{{ path('paprec_public_corp_' ~ cart.division|lower ~ '_subscription_loadNearbyAgencies', {cartUuid: cart.id}) }}">
                </div>
            {% endif %}
        </div>
        {% block division_selected %}
            <div class="step step--index">
                <div class="step__left">
                    <div class="step__title">{{ 'Public.Home.Location'|trans }}</div>
                </div>
                <div class="step__right">
                    <input class="input" type="text" id="locationSelect"
                           name="locationSelect" {% if cart.location and cart.location != '' %} value="{{ cart.location }}"{% endif %}
                           data-url="{{ path('paprec_public_corp_home_addLocation', {cartUuid: cart.id, location: 'locationTmp', city: 'cityTmp', postalCode: 'postalCodeTmp', long: 'longTmp', lat:'latTmp' }) }}"
                           placeholder="{{ 'Public.Cart.PostalCode'|trans }}">

                    {% block frequency %}
                        <div id="frequencyRadioBox"
                             data-url="{{ path('paprec_public_corp_home_addFrequency', {cartUuid: cart.id, frequency: 'frequencyTmp' }) }}">
                            <input class="input__radio" type="radio" id="ponctualRadio"
                                   name="frequencyRadio"
                                   value="ponctual" {% if cart.frequency == 'ponctual' %}checked{% endif %}>
                            <label for="ponctualRadio">{{ 'Public.Cart.Ponctual'|trans }}</label>

                            <input class="input__radio" type="radio" id="regularRadio" name="frequencyRadio"
                                   value="regular" {% if cart.frequency == 'regular' %}checked{% endif %}>
                            <label for="regularRadio">{{ 'Public.Cart.Regular'|trans }}</label>
                        </div>
                        <div class="clearfix"></div>
                    {% endblock %}

                </div>
            </div>

        {% endblock %}
        {% block cta_panel %} {% endblock %}

        {% block main_content_index %}
            {% block cta_bottom_panel %} {% endblock %}
        {% endblock %}

    </form>
{% endblock %}
