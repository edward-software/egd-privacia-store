{% extends 'base_public.html.twig' %}
{% block main_content %}
    <section class="page-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-6 col-12">
                    <h2>Entrez vos coordonnées pour être contacté
                        et recevoir votre devis.
                    </h2>
                    <div class="divider"></div>
                </div>
            </div>

            <form id="contactDetailForm" action="" method="post">
                <div class="row form-container">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>{{ 'Commercial.QuoteRequest.BusinessName'|trans }} :</label>
                            {{ form_widget(form.businessName, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                Champ non renseigné
                            </div>
                        </div>
                        <div class="form-group select-container">
                            <label>{{ 'Commercial.QuoteRequest.Canton'|trans }} :</label>
                            {{ form_widget(form.canton, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label>{{ 'Commercial.QuoteRequest.Civility'|trans }} :</label>
                            {{ form_widget(form.civility, {'attr': {'class': 'form-check form-check-inline radio-form'}}) }}
                        </div>
                        <div class="form-group">
                            <label>{{ 'Commercial.QuoteRequest.LastName'|trans }} :</label>
                            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label>{{ 'Commercial.QuoteRequest.FirstName'|trans }} :</label>
                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label>{{ 'Commercial.QuoteRequest.Email'|trans }} :</label>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label>{{ 'Commercial.QuoteRequest.Phone'|trans }} :</label>
                            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label>{{ 'Commercial.QuoteRequest.CoworkerNumber'|trans }} :</label>
                            {{ form_widget(form.coworkerNumber, {'attr': {'class': 'form-control'}}) }}
                        </div>

                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>{{ 'Commercial.QuoteRequest.IsMultisite'|trans }} :</label>
                            {{ form_widget(form.isMultisite, {'attr': {'class': 'form-check form-check-inline radio-form'}}) }}
                        </div>
                        <div class="form-group">
                            <label>{{ 'Commercial.QuoteRequest.Address'|trans }} :</label>
                            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label>{{ 'Commercial.QuoteRequest.PostalCode'|trans }} :</label>
                            {{ form_widget(form.postalCode, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label>{{ 'Commercial.QuoteRequest.City'|trans }} :</label>
                            {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label>{{ 'Commercial.QuoteRequest.Comment'|trans }} :</label>
                            {{ form_widget(form.comment, {'attr': {'class': 'form-control', 'rows': '11'}}) }}
                        </div>
                        <button type="submit" class="btn">Envoyer la demande</button>
                    </div>
                </div>
                {{ form_rest(form) }}
            </form>

        </div>
    </section>
{% endblock %}
