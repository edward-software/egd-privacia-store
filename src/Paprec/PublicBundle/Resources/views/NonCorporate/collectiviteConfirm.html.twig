{% extends "@PaprecPublic/Common/Base/base_stepper.html.twig" %}

{#{% block title %}#}

{#{% endblock %}#}

{#{% block stylesheets %}#}

{#{% endblock %}#}
{% block whoare %}
{% endblock %}

{% block sidebar %}
    {# Définition des menus affichés dans la sidebar #}
    {% set besoin = 'active' %}
    {% set confirmation = 'active' %}
    {{ parent() }}
{% endblock %}

{% block sidebar_info %}
    {{ render(controller('PaprecPublicBundle:Common:getSideBarInfo')) }}
{% endblock %}

{% block main_content_stepper %}
    <div class="step">
        <div class="step__sucess">
            <div class="step__sucess__container">
                <div class="step__sucess__container__left">
                </div>
                <div class="step__sucess__container__right">
                    <div class="title">{{ 'Public.Confirm.Thanks'|trans|upper }}</div>
                    <div class="content">{{ 'Public.Confirm.RequestReceived'|trans }}</div>
                </div>
            </div>
        </div>
        <div class="bold">{% if quoteRequest.civility == 'M' %}{{ 'General.Mr'|trans }}{% else %}{{ 'General.Mme'|trans }}{% endif %} {{ quoteRequest.firstName }} {{ quoteRequest.lastName }}
            ,
        </div>

        <div class="greennotice">
            {{ 'Public.Confirm.AgencyContact'|trans }}
        </div>

        <a href="{{ paprec_public_site_url }}" class="backtohome button button--green">{{ 'Public.Cart.BackHome'|trans }}</a>

    </div>
{% endblock %}

{% block bottom_customizable_area %}
    {% set customArea = paprec_customizable_area('reassurance_banner_default') %}
    {% if customArea is not null %}
        {% autoescape false %}
            {{ customArea.content }}
        {% endautoescape %}
    {% endif %}

    {% set customAreaLogo = paprec_customizable_area('logo_banner_default') %}
    {% if customAreaLogo is not null %}
        {% autoescape false %}
            {{ customAreaLogo.content }}
        {% endautoescape %}
    {% endif %}

{% endblock %}

{% block javascripts %}
{% endblock %}
