{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Home.Ticket.List'|trans }}
{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block content_title %}
    {{ 'Home.Ticket.Tickets'|trans }}
{% endblock %}

{% block main_content %}

    <div class="row">
        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-list"></i> {{ 'Home.Ticket.List'|trans }}
                    </h4>
                    <div class="float-right">
                        <a href="{{ path('paprec_home_ticket_add') }}" class="btn btn-sm btn-outline-primary">
                            <i class="fa fa-xs fa-plus"></i> {{ 'Home.Ticket.Add'|trans }}
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <table id="ticket-list-datatable" class="table table-striped table-bordered table-hover"
                           cellpadding="0" cellspacing="0" border="0" width="100%">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>{{ 'Home.Ticket.Title'|trans }}</th>
                            <th>{{ 'Home.Ticket.Level.Level'|trans }}</th>
                            <th>{{ 'Home.Ticket.Status.Status'|trans }}</th>
                            <th>{{ 'Home.Ticket.Invoice-status.Invoice-status'|trans }}</th>
                            <th>{{ 'Home.Ticket.Author-name'|trans }}</th>
                            <th>{{ 'Home.Ticket.Date-creation'|trans }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>

                </div>
            </div>
            <!-- /BOX -->
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    <script>
        $(function () {

            var ticketList = $('#ticket-list-datatable').DataTable({
                "language": {
                    "lengthMenu": "{{ 'General.Datatable.Records-per-page'|trans }}",
                    "zeroRecords": "{{ 'General.Datatable.Nothing-found'|trans }}",
                    "info": "{{ 'General.Datatable.Showing-page'|trans }}",
                    "infoEmpty": "{{ 'General.Datatable.No-records-available'|trans }}",
                    "search": "{{ 'General.Datatable.Search'|trans }}:",
                    "sProcessing": "{{ 'General.Datatable.Loading'|trans }}",
"paginate": {
                        "previous": "{{ 'General.Datatable.Previous'|trans }}",
                        "next": "{{ 'General.Datatable.Next'|trans }}",
                    },
"select": {
                        "rows": {
                            _: "%d lignes sélectionnées",
                            0: "Aucune ligne sélectionnée",
                            1: "1 ligne sélectionnée"
                        }
                    },
                },
                dom: '<"row"Bf<"ml-auto">l><"row"rt><"row"i<"ml-auto">sp>',
                buttons: [
                    {
                        text: '{{ 'General.Remove'|trans }}',
                        className: 'btn-sm',
                        action: function (e, dt) {
                            if (dt.rows({selected: true}).count() > 0) {
                                var rowIds = [];
                                $.each(dt.rows({selected: true}).data(), function () {
                                    rowIds.push(this.id);
                                });
                                var url = "{{ path("paprec_home_ticket_removeMany", {ids: '0000'}) }}".replace('0000', rowIds.join(','));

                                Swal({
                                    title: "{{ 'General.Confirm'|trans }}",
                                    text: "{{ 'General.Confirm-remove'|trans }}",
                                    showCancelButton: true,
                                    confirmButtonText: "{{ 'General.Yes'|trans }}",
                                    cancelButtonText: "{{ 'General.No'|trans }}"
                                }).then((result) => {
                                    if (result.value) {
                                        $(location).attr('href', url);
                                    }
                                });
                            }
                        }
                    }
                ],
                "select": true,
                "processing": true,
                "serverSide": true,
                "lengthMenu": [[5, 10, 20, 50], [5, 10, 20, 50]],
                "iDisplayLength": 50,
                "ajax": "{{ path('paprec_home_ticket_loadList') }}",
                "columns": [
                    {"data": "id"},
                    {"data": "title"},
                    {"data": "level"},
                    {"data": "status"},
                    {"data": "invoiceStatus"},
                    {"data": "authorName"},
                    {"data": "dateCreation"},
                    {"data": "id", "width": "10%", "bSortable": false}
                ],

                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    viewUrl = "{{ path('paprec_home_ticket_view', {id: '0000'}) }}".replace('0000', aData['id']);
                    editUrl = "{{ path('paprec_home_ticket_edit', {id: '0000'}) }}".replace('0000', aData['id']);

                    $(nRow).find(':last-child').html('<a href="' + viewUrl + '" data-toggle="tooltip" title="Voir" class="btn btn-sm btn-primary btn-sm"><i class="fa fa-xs fa-eye"></i></a> <a href="' + editUrl + '" data-toggle="tooltip" title="Modifier" class="btn btn-sm btn-warning btn-sm"><i class="fa fa-xs fa-edit"></i></a>');

                }
            });

            $('#ticket-list-datatable tbody').on('dblclick', 'tr', function (event) {
                url = "{{ path('paprec_home_ticket_view', {id: '0000'}) }}".replace('0000', $(this).attr('id').replace('row_', ''));
                $(location).attr('href', url);
            });

        });
    </script>
{% endblock %}
