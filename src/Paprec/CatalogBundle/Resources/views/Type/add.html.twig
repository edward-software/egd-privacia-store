{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.Argument.Add'|trans }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content_title %}
    {{ 'Catalog.Argument.Arguments'|trans }}
{% endblock %}

{% block main_content %}

    <form id="catalogArgumentForm" action="" method="post" enctype="multipart/form-data">

        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-plus"></i> {{ 'Catalog.Argument.Add'|trans }}
                    </h4>
                    <div class="float-right">
                        <a href="javascript:void(0);" class="btn btn-sm btn-success catalog-argument-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'Catalog.Argument.Save'|trans }}</a>
                        <a href="javascript:void(0);" class="btn btn-sm btn-danger catalog-argument-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'Catalog.Argument.Cancel'|trans }}</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="col-md-7">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{ 'Catalog.Type.Informations'|trans }}</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.Type.Name'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.name) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{ form_rest(form) }}
                    </div>
                </div>

                <div class="card-footer">
                    <div class="float-right">
                        <a href="javascript:void(0);" class="btn btn-sm btn-success catalog-argument-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'Catalog.Argument.Save'|trans }}</a>
                        <a href="javascript:void(0);" class="btn btn-sm btn-danger catalog-argument-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'Catalog.Argument.Cancel'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </form>

{% endblock %}

{% block javascripts %}

    <script>
        $(function () {

            $('.catalog-argument-save-button').on('click', function () {
                $('#catalogArgumentForm').submit();
            });


            $('.catalog-argument-cancel-button').on('click', function () {

                var url = "{{ path("paprec_catalog_argument_index") }}";

                Swal({
                    title: "{{ 'General.Confirm'|trans }}",
                    text: "{{ 'Catalog.Argument.Confirm-cancel'|trans }}",
                    showCancelButton: true,
                    confirmButtonText: "{{ 'General.Yes'|trans }}",
                    cancelButtonText: "{{ 'General.No'|trans }}"
                }).then((result) => {
                    if (result.value) {
                        $(location).attr('href', url);
                    }
                });

            });

        });
    </script>
{% endblock %}
