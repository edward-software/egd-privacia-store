{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.Region.View'|trans }}
{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block content_title %}
    {{ 'Catalog.Region.Regions'|trans }}
{% endblock %}

{% block main_content %}


    <div class="col-md-12">
        <!-- CARD -->
        <div class="card">
            <div class="card-header">
                <h4>
                    <i class="fa fa-xs fa-folder"></i> {{ 'Catalog.Region.View'|trans }}
                </h4>
                <div class="float-right">
                    <a href="{{ path("paprec_catalog_region_edit", {id: region.id}) }}"
                       class="btn btn-sm btn-warning"><i
                                class="fa fa-xs fa-edit"></i> {{ 'Catalog.Region.Edit'|trans }}</a>
                    <a id="catalogRegionRemoveButton" href="javascript:void(0);" class="btn btn-sm btn-danger"><i
                                class="fa fa-xs fa-trash"></i> {{ 'Catalog.Region.Remove'|trans }}</a>
                </div>
                <div class="float-left">
                    <a href="{{ path('paprec_catalog_region_index') }}" class="btn btn-sm btn-default"><i
                                class="fa fa-xs fa-chevron-left"></i> {{ 'Catalog.Region.List'|trans }}</a>
                </div>
            </div>
            <div class="card-body">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'General.Information'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Catalog.Region.Name'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ region.name }}
                                </label>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Catalog.Region.Email'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ region.email }}
                                </label>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Catalog.Region.PostalCodes'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {% for postalCode in region.postalCodes %}
                                        <a href="{{ path('paprec_catalog_postalCode_view', {id: postalCode.id}) }}">
                                            {{ postalCode.code }}
                                        </a>,
                                    {% endfor %}
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 mt-3">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'General.System-information'|trans }}</h5>
                        </div>
                        <div class="card-body">

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'General.Date-creation'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ region.dateCreation|localizeddate('short', 'medium', app.request.locale) }}
                                </label>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'General.Date-update'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ region.dateUpdate is empty ? "" : region.dateUpdate|localizeddate('short', 'medium', app.request.locale) }}
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

        {% block javascripts %}

            <script>
                $(function () {

                    $('#catalogRegionRemoveButton').on('click', function () {

                        var url = "{{ path("paprec_catalog_region_remove", {id: region.id}) }}";

                        Swal.fire({
                            title: "{{ 'General.Confirm'|trans }}",
                            text: "{{ 'General.Confirm-remove'|trans }}",
                            showCancelButton: true,
                            confirmButtonText: "{{ 'General.Yes'|trans }}",
                            cancelButtonText: "{{ 'General.No'|trans }}"
                        }).then(function(result) {
                            if (result.value) {
                                $(location).attr('href', url);
                            }
                        });

                    });
                });
            </script>
        {% endblock %}
