{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.Argument.Edit'|trans }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content_title %}
    {{ 'Catalog.Argument.Arguments'|trans }}
{% endblock %}

{% block main_content %}

    <form id="catalogArgumentForm" action="" method="post" enctype="multipart/form-data">

        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-pencil-alt"></i> {{ 'Catalog.Argument.Edit'|trans }} #{{ argument.id|formatId(6) }}
                    </h4>
                    <div class="float-right">

                        <a href="javascript:void(0);" class="btn btn-sm btn-success catalog-argument-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'Catalog.Argument.Save'|trans }}</a>
                        <a href="javascript:void(0);" class="btn btn-sm btn-danger catalog-argument-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'Catalog.Argument.Cancel'|trans }}</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="col-md-7">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{ 'Catalog.Argument.Informations'|trans }}</h5>
                            </div>
                            <div class="card-body row">
                                <div class="col-md-6 no-gutters">
                                    <div class="form-item my-4 col-md-6">
                                        <div class="form-label">{{ 'Catalog.Argument.Picto'|trans }} (35 x 35 pixels)</div>
                                        <div class="form-content">
                                            {{ form_widget(form.picto) }}
                                            {{ form_errors(form.picto) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <img class="" src="{{ asset('/uploads/pictos/' ~ argument.picto) }}" alt=""
                                         style="max-width: 50%; height: auto;">
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class="form-label">{{ 'Catalog.Argument.Description'|trans }}</div>
                                        <div class="form-content">
                                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.description) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{ form_rest(form) }}
                    </div>
                </div>
                <div class="card-footer">
                    <div class="float-right">
                        <a href="javascript:void(0);" class="btn btn-sm btn-success catalog-argument-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'Catalog.Argument.Save'|trans }}</a>
                        <a href="javascript:void(0);" class="btn btn-sm btn-danger catalog-argument-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'Catalog.Argument.Cancel'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </form>



{% endblock %}

{% block javascripts %}

    <script>
        $(function () {

            $('.catalog-argument-save-button').on('click', function () {

                $('#catalogArgumentForm').submit();

            });


            $('.catalog-argument-cancel-button').on('click', function () {

                var url = "{{ path("paprec_catalog_argument_view", {id: argument.id}) }}";

                Swal({
                    title: "{{ 'General.Confirm'|trans }}",
                    text: "{{ 'Catalog.Argument.Confirm-cancel'|trans }}",
                    showCancelButton: true,
                    confirmButtonText: "{{ 'General.Yes'|trans }}",
                    cancelButtonText: "{{ 'General.No'|trans }}"
                }).then((result) => {
                    if (result.value) {
                        $(location).attr('href', url);
                    }
                });

            });

        });
    </script>
{% endblock %}
