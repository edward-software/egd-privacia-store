{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.Argument.View'|trans }}
{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block content_title %}
    {{ 'Catalog.Argument.Arguments'|trans }}
{% endblock %}

{% block main_content %}


    <div class="col-md-12">
        <!-- CARD -->
        <div class="card">
            <div class="card-header">
                <h4>
                    <i class="fa fa-xs fa-folder"></i> {{ 'Catalog.Argument.View'|trans }}
                </h4>
                <div class="float-right">
                    <a href="{{ path("paprec_catalog_argument_edit", {id: argument.id}) }}" class="btn btn-sm btn-warning"><i
                                class="fa fa-xs fa-edit"></i> {{ 'Catalog.Argument.Edit'|trans }}</a>
                    <a id="catalogArgumentRemoveButton" href="javascript:void(0);" class="btn btn-sm btn-danger"><i
                                class="fa fa-xs fa-trash"></i> {{ 'Catalog.Argument.Remove'|trans }}</a>
                </div>
                <div class="float-left">
                    <a href="{{ path('paprec_catalog_argument_index') }}" class="btn btn-sm btn-default"><i
                                class="fa fa-xs fa-chevron-left"></i> {{ 'Catalog.Argument.List'|trans }}</a>
                </div>
            </div>
            <div class="card-body">
                <div class="col-md-7">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'Catalog.Argument.Informations'|trans }}</h5>
                        </div>
                        <div class="card-body row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.Argument.Description'|trans }}</label>
                                    <label class="col-form-label col-md-8">
                                        {{ argument.description|nl2br }}
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6" style="text-align:center; vertical-align: middle;">
                                <img class="" src="{{ asset('/uploads/pictos/' ~ argument.picto) }}" alt="" style="max-width: 50%; height: auto;">
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-md-7 mt-3">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'Catalog.Argument.System-informations'|trans }}</h5>
                        </div>
                        <div class="card-body">

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Catalog.Argument.Date-creation'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ argument.dateCreation|localizeddate('short', 'medium', app.request.locale) }}
                                </label>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Catalog.Argument.Date-update'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ argument.dateUpdate is empty ? "" : argument.dateUpdate|localizeddate('short', 'medium', app.request.locale) }}
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

        {% block javascripts %}

            <script>
                $(function () {

                    $('#catalogArgumentRemoveButton').on('click', function () {

                        var url = "{{ path("paprec_catalog_argument_remove", {id: argument.id}) }}";


                        Swal({
                            title: "{{ 'General.Confirm'|trans }}",
                            text: "{{ 'Catalog.Argument.Confirm-remove'|trans }}",
                            showCancelButton: true,
                            confirmButtonText: "{{ 'General.Yes'|trans }}",
                            cancelButtonText: "{{ 'General.No'|trans }}"
                        }).then((result) => {
                            if (result.value) {
                                $(location).attr('href', url);
                            }
                        });

                    });
                });
            </script>
        {% endblock %}
