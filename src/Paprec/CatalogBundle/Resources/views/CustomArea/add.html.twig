{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.CustomArea.Add'|trans }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content_title %}
    {{ 'Catalog.CustomArea.Add'|trans }}
{% endblock %}

{% block main_content %}

    <form id="catalogCustomAreaForm" action="" method="post">

        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-plus"></i> {{ 'Catalog.CustomArea.Add'|trans }}
                    </h4>
                    <div class="float-right">
                        <a href="javascript:void(0);" class="btn btn-sm btn-success catalog-customArea-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'General.Save'|trans }}</a>
                        <a href="javascript:void(0);" class="btn btn-sm btn-danger catalog-customArea-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'General.Cancel'|trans }}</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{ 'Catalog.CustomArea.Informations'|trans }}</h5>
                            </div>
                            <div class="card-body no-gutters">
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.CustomArea.Code'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.code, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.code) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.CustomArea.Language'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.language, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.language) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.CustomArea.IsDisplayed'|trans }}</div>
                                    <div class="form-content">
                                        {% for radio in form.isDisplayed.children %}
                                            <div class="form__check ml-4">
                                                {{ form_widget(radio) }}
                                                {{ form_label(radio) }}
                                            </div>
                                        {% endfor %}
                                        {{ form_errors((form.isDisplayed)) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mt-3">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{ 'Catalog.CustomArea.Content'|trans }}</h5>
                            </div>
                            <div class="card-body no-gutters row">
                                <div class="col">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="form-label">{{ 'Catalog.CustomArea.LeftContent'|trans }}</div>
                                            <div class="form-content checkbox-list">
                                                {{ form_widget(form.leftContent) }}
                                                {{ form_errors(form.leftContent) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="form-label">{{ 'Catalog.CustomArea.RightContent'|trans }}</div>
                                            <div class="form-content checkbox-list">
                                                {{ form_widget(form.rightContent) }}
                                                {{ form_errors(form.rightContent) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="card-footer">
                    <div class="float-right">
                        <a href="javascript:void(0);" class="btn btn-sm btn-success catalog-customArea-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'General.Save'|trans }}</a>
                        <a href="javascript:void(0);" class="btn btn-sm btn-danger catalog-customArea-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'General.Cancel'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
    </form>



{% endblock %}

{% block javascripts %}

    <script>
        $(function () {

            $('.catalog-customArea-save-button').on('click', function () {
                $('#catalogCustomAreaForm').submit();
            });


            $('.catalog-customArea-cancel-button').on('click', function () {

                var url = "{{ path("paprec_catalog_custom_area_index") }}";

                Swal.fire({
                    title: "{{ 'General.Confirm'|trans }}",
                    text: "{{ 'General.Confirm-cancel'|trans }}",
                    showCancelButton: true,
                    confirmButtonText: "{{ 'General.Yes'|trans }}",
                    cancelButtonText: "{{ 'General.No'|trans }}"
                }).then(function (result) {
                    if (result.value) {
                        $(location).attr('href', url);
                    }
                });

            });

        });
    </script>
{% endblock %}
