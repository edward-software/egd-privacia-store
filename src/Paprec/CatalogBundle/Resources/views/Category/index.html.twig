                                        <th>{{ 'Catalog.Category.Date-crea'|trans }}</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    {% endif %}
