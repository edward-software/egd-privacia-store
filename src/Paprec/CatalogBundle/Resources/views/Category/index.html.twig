                },
                // On réduit la taille maximale de la deuxieme colonne pour ne pas qu'elle dépasse 50 caractères
                columnDefs: [
                    {"width": "120px", "targets": 1},
                    {"width": "170px", "targets": 2},
                    {
                        targets: 2,
                        render: function (data, type, row) {
                            if (data && data.length > 50)
                                return data.substr(0, 50) + ' [...]';
                            else
                                return data;
                        }
                    }]
            });
            categoryDIList.on('row-reorder', function (e, diff, edit) {
                var categories = [];
                // on parcourt toutes les rows et on ajoute l'id des catégories dans l'ordre
                var table = document.getElementById('categoriesDIListDatatable');
                var rowLength = table.rows.length;

                // On commence l'itérateur à 1 pour exclure la ligne d'entête
                for (var i = 1; i < rowLength; i += 1) {
                    var row = table.rows[i];
                    categories.push(row.id.replace('row_', ''))
                }
                if (categories.length > 0) {
                    $.ajax({
                        'url': '{{ path('paprec_catalog_category_orderCategories') }}',
                        'method': 'post',
                        'data': {
                            IdPositionCategories: categories
                        }
                    }).done(function (data) {
                        categoryDIList.ajax.reload();
                    });
                }
