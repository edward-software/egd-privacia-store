{% block main_content %}
    <div class="row">
        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-list"></i> {{ 'Catalog.Category.List'|trans }}
                    </h4>
                    <div class="float-right">
                        <a href="{{ path('paprec_catalog_category_add') }}" class="btn btn-sm btn-outline-primary">
