                            <div class="card-header">
                                <div class="card-title">
                                    <h5>{{ 'Catalog.Category.ListChantiers'|trans }}</h5>
                                </div>
                            </div>
                            <div class="card-body">
                                <table id="categoriesChantierListDatatable"
