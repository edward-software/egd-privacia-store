                    // $(nRow).find(':first-child').find(':first-child').append('<i class="fa fa-xs fa-arrows-alt"></i>');

                    $(nRow).find(':last-child').html('<a href="' + viewUrl + '" data-toggle="tooltip" title="Voir" class="btn btn-sm btn-primary"><i class="fa fa-xs fa-eye"></i></a> <a href="' + editUrl + '" data-toggle="tooltip" title="Editer" class="btn btn-sm btn-warning"><i class="fa fa-xs fa-edit"></i></a>');

