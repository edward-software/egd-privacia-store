                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>{{ 'Catalog.Category.Name'|trans }}</th>
                                        <th>{{ 'Catalog.Category.Description'|trans }}</th>
                                        <th>{{ 'Catalog.Category.Position'|trans }}</th>
                                        <th>{{ 'Catalog.Category.Enabled'|trans }}</th>
                                        <th>{{ 'Catalog.Category.Date-crea'|trans }}</th>
