{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.Category.Add'|trans }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content_title %}
    {{ 'Catalog.Category.Categories'|trans }}
{% endblock %}

{% block main_content %}

    <form id="catalogCategoryForm" action="" method="post" enctype="multipart/form-data">

        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-plus"></i> {{ 'Catalog.Category.Add'|trans }}
                    </h4>
                    <div class="float-right">
                        <a href="javascript:void(0);" class="btn btn-sm btn-success catalog-category-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'Catalog.Category.Save'|trans }}</a>
                        <a href="javascript:void(0);" class="btn btn-sm btn-danger catalog-category-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'Catalog.Category.Cancel'|trans }}</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="col-md-7">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{ 'Catalog.Category.Informations'|trans }}</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-item mb-2">
                                    <div class="form-label">{{ 'Catalog.Category.Picto'|trans }} (125 x 120 pixels)</div>
                                    <div class="form-content">
                                        {{ form_widget(form.picto) }}
                                        {{ form_errors(form.picto) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.Category.Name'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.name) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.Category.Description'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.Category.Enabled'|trans }}</div>
                                    <div class="form-content">
                                        {% for radio in form.enabled.children %}
                                            <div class="form__check ml-4">
                                                {{ form_widget(radio) }}
                                                {{ form_label(radio) }}
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.Category.Division'|trans }}</div>
                                    <div class="form-content checkbox-list">
                                        {% for radio in form.division.children %}
                                            <div class="form__check ml-4">
                                                {{ form_widget(radio) }}
                                                {{ form_label(radio) }}
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="float-right">
                        <a href="javascript:void(0);" class="btn btn-sm btn-success catalog-category-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'Catalog.Category.Save'|trans }}</a>
                        <a href="javascript:void(0);" class="btn btn-sm btn-danger catalog-category-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'Catalog.Category.Cancel'|trans }}</a>
                    </div>
                </div>
            </div>

        </div>
        {{ form_rest(form) }}

    </form>
    </div>



{% endblock %}

{% block javascripts %}

    <script>
        $(function () {

            $('.catalog-category-save-button').on('click', function () {
                $('#catalogCategoryForm').submit();
            });


            $('.catalog-category-cancel-button').on('click', function () {

                var url = "{{ path("paprec_catalog_category_index") }}";

                Swal({
                    title: "{{ 'General.Confirm'|trans }}",
                    text: "{{ 'Catalog.Category.Confirm-cancel'|trans }}",
                    showCancelButton: true,
                    confirmButtonText: "{{ 'General.Yes'|trans }}",
                    cancelButtonText: "{{ 'General.No'|trans }}"
                }).then((result) => {
                    if (result.value) {
                        $(location).attr('href', url);
                    }
                });


            });

        });
    </script>
{% endblock %}