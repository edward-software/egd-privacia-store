{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'User.User.View'|trans }}
{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block content_title %}
    {{ 'User.User.Users'|trans }}
{% endblock %}

{% block main_content %}


<div class="col-md-12">
    <!-- FLASH MESSAGE -->
    <div class="view-box">

        {% for flashMessage in app.session.flashbag.get('errors') %}
            <div class="alert alert-danger">{{ ('User.User.Error.' ~ flashMessage)|trans }}</div>
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">{{ ('User.User.Success.' ~ flashMessage)|trans }}</div>
        {% endfor %}
    </div>
    <!-- CARD -->
    <div class="card">
        <div class="card-header">
            <h4>
                <i class="fa fa-xs fa-user"></i> {{ 'User.User.View'|trans }}
            </h4>
            <div class="float-right">
                <a id="userUserSendAccessButton" href="javascript:void(0);" class="btn btn-sm btn-primary"><i
                            class="fa fa-xs fa-envelope"></i> {{ 'User.User.Send-access'|trans }}</a>
                <a href="{{ path("paprec_user_user_edit", {id: user.id}) }}" class="btn btn-sm btn-warning"><i
                            class="fa fa-xs fa-edit"></i> {{ 'User.User.Edit'|trans }}</a>
                <a id="userUserRemoveButton" href="javascript:void(0);" class="btn btn-sm btn-danger"><i
                            class="fa fa-xs fa-trash"></i> {{ 'User.User.Remove'|trans }}</a>
            </div>
            <div class="float-left">
                <a href="{{ path('paprec_user_user_index') }}" class="btn btn-sm btn-default"><i
                            class="fa fa-xs fa-chevron-left"></i> {{ 'User.User.List'|trans }}</a>
            </div>
        </div>
        <div class="card-body">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">{{ 'User.User.Informations'|trans }}</h5>
                    </div>
                    <div class="card-body row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'User.User.Company-name'|trans }}</label>
                                <label class="col-form-label">
                                    {{ user.companyName }}
                                </label>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'User.User.Username'|trans }}</label>
                                <label class="col-form-label">
                                    {{ user.username }}
                                </label>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'User.User.First-name'|trans }}</label>
                                <label class="col-form-label">
                                    {{ user.firstName }}
                                </label>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'User.User.Last-name'|trans }}</label>
                                <label class="col-form-label">
                                    {{ user.lastName }}
                                </label>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'User.User.Email'|trans }}</label>
                                <label class="col-form-label">
                                    {{ user.email }}
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'User.User.Roles'|trans }}</label>
                                <label class="col-form-label">
                                    {% for role in user.roles %}
                                        {% if role != 'ROLE_USER' %}
                                            {{ role|trans }}<br>
                                        {% endif %}
                                    {% endfor %}
                                </label>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'User.User.Divisions'|trans }}</label>
                                <label class="col-form-label">
                                    {% for division in user.divisions %}
                                        {{ division|trans }}<br>
                                    {% endfor %}
                                </label>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'User.User.Enabled'|trans }}</label>
                                <label class="col-form-label">
                                    {% if user.enabled == 1 %}Oui{% else %}Non{% endif %}
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12 mt-3">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">{{ 'User.User.System-informations'|trans }}</h5>
                    </div>
                    <div class="card-body">

                        <div class="form-group row">
                            <label class="col-md-4 col-form-label">{{ 'User.User.Date-creation'|trans }}</label>
                            <label class="col-form-label">
                                {{ user.dateCreation|localizeddate('short', 'medium', app.request.locale) }}
                            </label>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-4 col-form-label">{{ 'User.User.Date-update'|trans }}</label>
                            <label class="col-form-label">
                                {{ user.dateUpdate is empty ? "" : user.dateUpdate|localizeddate('short', 'medium', app.request.locale) }}
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

        {% block javascripts %}

            <script>
                $(function () {

                    $('#userUserRemoveButton').on('click', function () {

                        var url = "{{ path("paprec_user_user_remove", {id: user.id}) }}";

                        Swal({
                            title: "{{ 'General.Confirm'|trans }}",
                            text: "{{ 'User.User.Confirm-remove'|trans }}",
                            showCancelButton: true,
                            confirmButtonText: "{{ 'General.Yes'|trans }}",
                            cancelButtonText: "{{ 'General.No'|trans }}"
                        }).then((result) => {
                            if (result.value) {
                                $(location).attr('href', url);
                            }
                        });

                    });

                    $('#userUserSendAccessButton').on('click', function () {

                        var url = "{{ path("paprec_user_user_sendAccess", {id: user.id}) }}";

                        Swal({
                            title: "{{ 'General.Confirm'|trans }}",
                            text: "{{ 'User.User.Confirm-send-access'|trans }}",
                            showCancelButton: true,
                            confirmButtonText: "{{ 'General.Yes'|trans }}",
                            cancelButtonText: "{{ 'General.No'|trans }}"
                        }).then((result) => {
                            if (result.value) {
                                $(location).attr('href', url);
                            }
                        });

                    });
                });
            </script>
        {% endblock %}
