{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'User.User.Edit-my-profile'|trans }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content_title %}
    {{ 'User.User.Users'|trans }}
{% endblock %}

{% block main_content %}

    <form id="userUserForm" action="" method="post">
        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-pencil-alt"></i> {{ 'User.User.Edit-my-profile'|trans }} #{{ user.id|formatId(6) }}
                    </h4>
                    <div class="float-right">
                        <a href="javascript:void(0);" class="btn btn-sm btn-success user-user-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'User.User.Save'|trans }}</a>
                        <a href="javascript:void(0);" class="btn btn-sm btn-danger user-user-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'User.User.Cancel'|trans }}</a>
                    </div>
                </div>

                <div class="card-body">
                    <div class="col-md-7">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{ 'User.User.Informations'|trans }}</h5>
                            </div>
                            <div class="card-body">

                                <div class="form-group">
                                    <div class="form-label">{{ 'User.User.Company-name'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.companyName, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.companyName) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-label">{{ 'User.User.Username'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.username) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-label">{{ 'User.User.First-name'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.firstName) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-label">{{ 'User.User.Last-name'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.lastName) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-label">{{ 'User.User.Email'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.email) }}
                                    </div>
                                </div>

                                <div class="form-group ">
                                    {{ form_label(form.plainPassword.first) }}
                                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.plainPassword.first) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.plainPassword.second) }}
                                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.plainPassword.second) }}
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="float-right">
                            <a href="javascript:void(0);" class="btn btn-sm btn-success user-user-save-button"><i
                                        class="fa fa-xs fa-check"></i> {{ 'User.User.Save'|trans }}</a>
                            <a href="javascript:void(0);" class="btn btn-sm btn-danger user-user-cancel-button"><i
                                        class="fa fa-xs fa-close"></i> {{ 'User.User.Cancel'|trans }}</a>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        {{ form_rest(form) }}

    </form>



{% endblock %}

{% block javascripts %}

    <script>
        $(function () {

            $('.user-user-save-button').on('click', function () {

                $('#userUserForm').submit();

            });


            $('.user-user-cancel-button').on('click', function () {

                Swal({
                    title: "{{ 'General.Confirm'|trans }}",
                    text: "{{ 'User.User.Confirm-cancel'|trans }}",
                    showCancelButton: true,
                    confirmButtonText: "{{ 'General.Yes'|trans }}",
                    cancelButtonText: "{{ 'General.No'|trans }}"
                }).then((result) => {
                    if (result.value) {
                        $(location).attr('href', url);
                    }
                });

            });

        });
    </script>
{% endblock %}
