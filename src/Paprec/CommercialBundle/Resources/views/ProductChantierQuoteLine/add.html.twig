{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Commercial.ProductChantierQuote.Add'|trans }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content_title %}
    {{ 'Commercial.ProductChantierQuote.ProductChantierQuotes'|trans }}
{% endblock %}

{% block main_content %}

    <form id="commercialProductChantierQuoteForm" action="" method="post" enctype="multipart/form-data">
        <input type="hidden" id="submitFormInput" name="submitForm" value="">
        <input type="hidden" id="selectedProductInput" name="selectedProductId" value="">

        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-plus"></i> {{ 'Commercial.ProductChantierQuote.AddLine'|trans }}
                    </h4>
                    <div class="float-right">
                        <a href="javascript:void(0);"
                           class="btn btn-sm btn-success commercial-productChantierQuoteLine-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'Commercial.ProductChantierQuote.Save'|trans }}
                        </a>
                        <a href="javascript:void(0);"
                           class="btn btn-sm btn-danger commercial-productChantierQuoteLine-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'Commercial.ProductChantierQuote.Cancel'|trans }}
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="col-md-7">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{ 'Commercial.ProductChantierQuote.Informations'|trans }}</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label class="form-label">{{ 'Commercial.ProductChantierQuoteLine.ProductName'|trans }}</label>
                                    <div class="form-content">
                                        {{ form_widget(form.productChantier, {'attr': {'class': 'form-control select-product'}}) }}
                                        {{ form_errors(form.productChantier) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">{{ 'Commercial.ProductChantierQuoteLine.CategoryName'|trans }}</label>
                                    <div class="form-content">
                                        {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.category) }}
                                    </div>
                                </div>
                                <div class="form-group no-gutters">
                                    <label class="form-label">{{ 'Commercial.ProductChantierQuoteLine.Quantity'|trans }}</label>
                                    <div class="form-content col-md-6">
                                        {{ form_widget(form.quantity, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.quantity) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="float-right">
                        <a href="javascript:void(0);"
                           class="btn btn-sm btn-success commercial-productChantierQuoteLine-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'Commercial.ProductChantierQuote.Save'|trans }}
                        </a>
                        <a href="javascript:void(0);"
                           class="btn btn-sm btn-danger commercial-productChantierQuoteLine-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'Commercial.ProductChantierQuote.Cancel'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
    </form>



{% endblock %}

{% block javascripts %}

    <script>
        $(function () {
            $('#selectedProductInput').val($('.select-product').val());


            $('.commercial-productChantierQuoteLine-save-button').on('click', function () {
                $('#submitFormInput').val(1);
                $('#commercialProductChantierQuoteForm').submit();
            });


            $('.commercial-productChantierQuoteLine-cancel-button').on('click', function () {

                var url = "{{ path("paprec_commercial_productChantierQuote_view", { id: productChantierQuote.id }) }}";

                Swal({
                    title: "{{ 'General.Confirm'|trans }}",
                    text: "{{ 'Commercial.ProductChantierQuote.Confirm-cancel'|trans }}",
                    showCancelButton: true,
                    confirmButtonText: "{{ 'General.Yes'|trans }}",
                    cancelButtonText: "{{ 'General.No'|trans }}"
                }).then((result) => {
                    if (result.value) {
                        $(location).attr('href', url);
                    }
                });

            });

            $('.select-product').on('change', function () {
                $('#selectedProductInput').val($(this).val());
                $('#submitFormInput').val('');
                if ($(this).val() != '') {
                    $('#commercialProductChantierQuoteForm').submit();
                }
            });

        });
    </script>
{% endblock %}