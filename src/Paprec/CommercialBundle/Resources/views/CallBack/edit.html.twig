{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Commercial.CallBack.Edit'|trans }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content_title %}
    {{ 'Commercial.CallBack.CallBacks'|trans }}
{% endblock %}

{% block main_content %}

    <form id="commercialCallBackForm" action="" method="post" enctype="multipart/form-data">

        <div class="col-md-7">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-pencil-alt"></i> {{ 'Commercial.CallBack.Edit'|trans }}
                        #{{ callBack.id|formatId(6) }}
                    </h4>
                    <div class="float-right">
                        <a href="javascript:void(0);"
                           class="btn btn-sm btn-success commercial-callBack-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'Commercial.CallBack.Save'|trans }}</a>
                        <a href="javascript:void(0);"
                           class="btn btn-sm btn-danger commercial-callBack-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'Commercial.CallBack.Cancel'|trans }}</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group col-4">
                        <label class="form-label">{{ 'Commercial.CallBack.TreatmentStatus'|trans }}</label>
                        <div class="form-content">
                            {{ form_widget(form.treatmentStatus, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.treatmentStatus) }}
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="float-right">
                        <a href="javascript:void(0);" class="btn btn-sm btn-success commercial-callBack-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'Commercial.CallBack.Save'|trans }}</a>
                        <a href="javascript:void(0);"
                           class="btn btn-sm btn-danger commercial-callBack-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'Commercial.CallBack.Cancel'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
    </form>



{% endblock %}

{% block javascripts %}

    <script>
        $(function () {

            $('.commercial-callBack-save-button').on('click', function () {

                $('#commercialCallBackForm').submit();

            });


            $('.commercial-callBack-cancel-button').on('click', function () {

                var url = "{{ path("paprec_commercial_callBack_view", {id: callBack.id}) }}";

                Swal({
                    title: "{{ 'General.Confirm'|trans }}",
                    text: "{{ 'Commercial.CallBack.Confirm-cancel'|trans }}",
                    showCancelButton: true,
                    confirmButtonText: "{{ 'General.Yes'|trans }}",
                    cancelButtonText: "{{ 'General.No'|trans }}"
                }).then((result) => {
                    if (result.value) {
                        $(location).attr('href', url);
                    }
                });

            });

        });
    </script>
{% endblock %}
