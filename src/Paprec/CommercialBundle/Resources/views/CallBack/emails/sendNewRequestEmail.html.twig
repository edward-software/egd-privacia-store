{% extends "@PaprecCommercial/Common/emails/base_email.html.twig" %}

 {% block css_rules %}
     <style>
         .btn {
             border-radius: 3px;
             padding: 5px 15px;
         }
     </style>
 {% endblock %}

 {% block picto_header %}
     <img alt="Logo" src="{{ absolute_url(asset('build/static/phone.svg')) }}" width="60px" height="60px" border="0"
          class="picto-header">
 {% endblock %}

{% block title_header %}
    Vous avez une nouvelle demande de rappel
{% endblock %}

{% block subtitle_header %}
    Formulaire Être rappelé - N° {{ callBack.id|formatId(6) }}
{% endblock %}

{% block main_content %}
    <table class="newRequestEmailTable content-email-detail" border="0" cellpadding="0" cellspacing="0" width="100%"
           style="color: {{ blue1 }}; font-weight: bold;">
        <tr style="border-bottom: 1px solid rgba(0, 0, 0, 0.6);">
            <td>
                Détail de la demande N° {{ callBack.id|formatId(6) }}
                - {{ callBack.dateCreation|date('d/m/Y H:i') }}
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.CallBack.BusinessName'|trans }} : &nbsp;
                </div>
                <div class="value">
                    {{ callBack.businessName }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.CallBack.Civility'|trans }} : &nbsp;
                </div>
                <div class="value">
                    {% if callBack.civility == 'M' %}Monsieur{% else %}Madame{% endif %}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.CallBack.LastName'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ callBack.lastName }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.CallBack.FirstName'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ callBack.firstName }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.CallBack.Function'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ callBack.function }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.ContactUs.PostalCode'|trans }} :
                </div>
                <div class="value">
                    {#{{ contactUs.postalCode }}#}
                </div>
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.CallBack.Email'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ callBack.email }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.CallBack.Phone'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ callBack.phone }}
                </div>
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    Date de rappel souhaitée :&nbsp;
                </div>
                <div class="value">
                    {{ callBack.dateCallBack|localizeddate('full', 'none', app.request.locale) }}
                </div>
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    Créneau horaire souhaité :&nbsp;
                </div>
                <div class="value">
                    {{ callBack.timeCallBack|date('H\\Hs',"Europe/Paris") }}
                </div>
            </td>
        </tr>
    </table>
{% endblock %}

{% block footer %}
    <tr>
        <td style="padding-top: 15px;" class="footer-repondre-title">
            Pensez à rappeler cet internaute le jour J.
        </td>
    </tr>
    <tr>
        <td style="padding-bottom: 15px;">
            <a href="{{ absolute_url(path("paprec_commercial_callBack_edit", {id: callBack.id})) }}">
                <button class="btn btn-green" style="margin-top: 15px;">
                    Mettre à jour le statut
                </button>
            </a>
        </td>
    </tr>
{% endblock %}

{% block sub_footer %}
    <tr>
        <td>
            Cet email est un message automatique
        </td>
    </tr>
{% endblock %}

