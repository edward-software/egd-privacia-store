{% block javascripts %}

    <script>
        $(function () {

            $('.commercial-productD3EQuote-save-button').on('click', function () {
                $('#commercialProductD3EQuoteForm').submit();
            });


            $('.commercial-productD3EQuote-cancel-button').on('click', function () {

                var url = "{{ path("paprec_commercial_productD3EQuote_index") }}";

                Swal({
                    title: "{{ 'General.Confirm'|trans }}",
                    text: "{{ 'Commercial.ProductD3EQuote.Confirm-cancel'|trans }}",
                    showCancelButton: true,
                    confirmButtonText: "{{ 'General.Yes'|trans }}",
                    cancelButtonText: "{{ 'General.No'|trans }}"
                }).then((result) => {
                    if (result.value) {
                        $(location).attr('href', url);
                    }
                });

            });

        });
    </script>
