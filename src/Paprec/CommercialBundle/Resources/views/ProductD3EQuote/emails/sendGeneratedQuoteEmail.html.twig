{% extends "@PaprecCommercial/Common/emails/base_email.html.twig" %}

 {% block css_rules %}
     <style>
         .btn {
             border-radius: 3px;
             padding: 5px 15px;
         }
     </style>
 {% endblock %}

 {% block picto_header %}
     <img alt="Logo" src="{{ absolute_url(asset('build/static/picto_devis.svg')) }}" width="60px" height="60px"
          border="0" class="picto-header">
 {% endblock %}

{% block title_header %}
    Merci pour votre demande de devis
{% endblock %}

{% block subtitle_header %}
    <button class="btn btn-green">Devis au format PDF</button>
{% endblock %}

{% block main_content %}
    <table class="newRequestEmailTable content-email-detail" border="0" cellpadding="0" cellspacing="0" width="100%"
           style="text-align: right">
        <tr style="border-bottom: 1px solid rgba(0, 0, 0, 0.6); text-align: center">
            <td style="padding-bottom: 10px">
                Détail du devis N° {{ productD3EQuote.id|formatId(6) }} - {{ productD3EQuote.dateCreation|date('d/m/Y H:i') }}
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.ProductD3EQuote.BusinessName'|trans }} : &nbsp;
                </div>
                <div class="value">
                    {{ productD3EQuote.businessName }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    Contact : &nbsp;
                </div>
                <div class="value">
                    {% if productD3EQuote.civility == 'M' %}Monsieur{% else %}Madame{% endif %} {{ productD3EQuote.lastName }} {{ productD3EQuote.firstName }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.ProductD3EQuote.Function'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ productD3EQuote.function }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.ProductD3EQuote.Address'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ productD3EQuote.address }}
                    <br>
                    {{ productD3EQuote.postalCode }} {{ productD3EQuote.city }}
                </div>
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.ProductD3EQuote.Email'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ productD3EQuote.email }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.ProductD3EQuote.Phone'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ productD3EQuote.phone }}
                </div>
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
    </table>

    <table class="content-email-detail" border="0" cellpadding="0" cellspacing="0" width="80%"
           style="margin-top: 20px;">
        <tr>
            <td colspan="3" style="text-align: center; padding-bottom: 5px;">
                Composition du devis :
            </td>
        </tr>
        <tr>
            <td class="greyrecap" colspan="3">
                <div class="title">
                    {{ 'Public.Cart.ForfaitRecyclage'|trans }}
                </div>
                <div class="info">
                    {{ 'Public.Cart.Including2Lines'|trans|nl2br }}
                </div>
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        {% for productD3EQuoteLine in productD3EQuote.productD3EQuoteLines %}
            <tr style="border-bottom: 1px solid rgba(0, 0, 0, 0.6);">
                <td class="picto" style="text-align:center;">
                    {% if productD3EQuoteLine.productD3E.pictos|length > 0 %}
                        <img src="{{ absolute_url('/uploads/pictos/' ~ productD3EQuoteLine.productD3E.pictos[0].path) }}"
                             alt="#" style="height: 75px">
                    {% endif %}
                </td>
                <td class="product" style="padding-left: 15%">
                    {{ productD3EQuoteLine.quantity }} x {{ productD3EQuoteLine.productName }}
                </td>
                <td class="price" style="display: inline-flex; float: right; margin-right: 10px; line-height: 75px;">
                    à partir de
                    <div class="value bigger-value">
                        &nbsp; {{ productD3EQuoteLine.totalAmount|formatAmount('EUR', app.request.locale) }}</div>
                </td>
            </tr>
        {% endfor %}
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td></td>
            <td style="padding-left: 15%">
                <div class="value bigger-value" style="font-size: 1.3em;line-height: 75px;">TOTAL</div>
            </td>
            <td style="display: inline-flex; float: right; margin-right: 10px; line-height: 75px">
                à partir de
                <div class="value bigger-value">&nbsp; {{ productD3EQuote.totalAmount|formatAmount('EUR', app.request.locale) }}</div>
            </td>
        </tr>
    </table>

{% endblock %}

{% block footer %}
    <tr>
        <td class="footer-repondre-title" style="padding-top: 15px;">
            L'agence en charge de votre demande vous recontactera sous 48h
        </td>
    </tr>
    <tr>
        <td class="footer-repondre-title" style="padding-bottom: 15px;">
            par e-mail ou téléphone afin de valider un devis.
        </td>
    </tr>
{% endblock %}

{% block sub_footer %}
    <tr>
        <td>
            Cet email est un message automatique
        </td>
    </tr>
{% endblock %}

