{% block javascripts %}

    <script>
        $(function () {

            $('.commercial-quoteRequest-save-button').on('click', function () {
                $('#commercialQuoteRequestForm').submit();
            });


            $('.commercial-quoteRequest-cancel-button').on('click', function () {

                var url = "{{ path("paprec_commercial_quoteRequest_index") }}";

                Swal.fire({
                    title: "{{ 'General.Confirm'|trans }}",
                    text: "{{ 'General.Confirm-cancel'|trans }}",
                    showCancelButton: true,
                    confirmButtonText: "{{ 'General.Yes'|trans }}",
                    cancelButtonText: "{{ 'General.No'|trans }}"
                }).then(function (result) {
                    if (result.value) {
                        $(location).attr('href', url);
                    }
                });

            });

            $('#paprec_catalogbundle_quote_request_postalCode').autocomplete({
                source: '' + $('#paprec_catalogbundle_quote_request_postalCode').data('url'),
                minLength: 2
            })

        });
    </script>
