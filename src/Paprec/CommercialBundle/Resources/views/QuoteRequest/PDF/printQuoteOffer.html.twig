<html>
<head>
    <title>PDF Paprec Offer</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <style type="text/css">
        html,
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            font-weight: 500;
            font-size: 14px;
            color: #333333;
        }

        * {
            box-sizing: border-box;
            -webkit-box-sizing: border-box;
        }

        h1 {
            color: #2c4491;
            font-size: 20px;
            text-transform: uppercase;
            font-weight: 900;
            margin: 0;
        }

        h2 {
            color: #2c4491;
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        p {
            margin: 5px 0;
        }

        .bold {
            font-weight: bold;
        }

        .offer__container {
            width: 800px;
            /*height: 1280px;*/
            margin: auto;
            /*margin-bottom: 50px;*/
            position: relative;
        }


        /* FLEXBOX */

        .flex {
            display: -webkit-box;
            display: -webkit-flex;
            display: -ms-flexbox;
            display: -moz-box;
            display: box;
            display: flex;
        }

        .align-item-center {
            -webkit-box-align: center;
            -moz-box-align: center;
            -ms-flex-align: center;
            -webkit-align-items: center;
            box-align: center;
            align-items: center;
        }

        .align-item-end {
            -webkit-box-align: end;
            -moz-box-align: end;
            -ms-flex-align: end;
            -webkit-align-items: end;
            box-align: end;
            align-items: flex-end;
        }

        .justify-center {
            -webkit-box-pack: center;
            box-pack: center;
            justify-content: center;
        }

        .justify-end {
            -webkit-box-pack: end;
            box-pack: end;
            justify-content: flex-end;
        }

        .space-between {
            -webkit-box-pack: justify;
            box-pack: justify;
            justify-content: space-between;
        }

        .w50 {
            width: 50%;
        }

        .mb-20 {
            margin-bottom: 20px;
        }

        /***** PAGE OFFRE *****/

        /*header*/

        .offer__header {
            border-bottom: 3px solid #2c4491;
            padding-bottom: 20px;
        }

        .illustrations {
            margin-left: 350px;
            margin-top: 50px;
        }

        .illustrations img {
            max-height: 120px;
            max-width: 100%;
        }

        /*content*/

        .offer__content {
            padding: 30px 0;
        }


        .offer__ref {
            padding-bottom: 15px;
            border-bottom: 1px solid #2c4491;
        }

        .offer__ref h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        .offer__ref-items > div:first-child {
            width: 40%;
        }

        .offer__ref-items > div:last-child {
            width: 60%;
            padding-right: 15px;
        }


        .offer__presta {
            padding-top: 10px;
        }

        table {
            border-collapse: separate;
            border-spacing: 0;
            width: 100%;
            margin-bottom: 20px;
        }

        table td, table th {
            font-size: 12px;
            overflow: hidden;
            word-break: normal;
            text-align: center;
            border: 1px solid #333333;
            border-right: 0px;
            border-bottom: 0px;
        }

        table th {
            padding: 5px 10px;
            vertical-align: top;
        }

        table td {
            padding: 12px 5px;
        }

        table span {
            font-weight: normal;
        }

        table tr:last-child > td {
            border-bottom: 1px solid #333333;
        }

        table tr > td:last-child, table tr > th:last-child {
            border-right: 1px solid #333333;
        }

        table .table-header td {
            padding: 0;
            border-top: 0;
        }

        table .table-footer1 td:nth-child(n+2):nth-child(-n+3) {
            border-left: 0;
        }

        table .table-footer1 td:nth-child(n+5):nth-child(-n+7) {
            border-bottom: 1px solid #333333;
        }

        table .table-footer1 td {
            padding: 10px 0 5px 0;
        }

        table .table-footer2 td:nth-child(n+2):nth-child(-n+3) {
            border-left: 0;
        }

        table .table-footer2 td:nth-child(-n+4) {
            border-top: 0;
        }

        table .table-footer2 td:last-child {
            border-right: 0;
        }

        table .table-footer2 td {
            padding: 0 0 10px 0;
        }


        .offer__signature > div {
            width: 30%;
        }

        /*footer*/
        .offer__footer {
            padding-top: 30px;
            border-top: 3px solid #2c4491;
            /*position: absolute;*/
            /*bottom: 0;*/
            margin-top: 80px;
            width: 100%;
        }

    </style>

</head>
