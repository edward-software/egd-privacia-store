                <img src="{{ absolute_url(asset('build/static/reisswolf_logo_pdf.png')) }}" alt="logo Reisswolf">
            </div>
            <div>
                <img src="{{ absolute_url(asset('build/static/pug.png')) }}" style="width: 80px; margin-left: 10px;"
                     alt="logo Reisswolf">
            </div>
            <div class="flex align-item-end illustrations">
                <img src="{{ absolute_url(asset('build/static/IMG_2013_70.png')) }}" alt="illstration"
                     style="max-height: 80px;">
                <img src="{{ absolute_url(asset('build/static/IMG_2010_240.png')) }}" alt="illstration"
                     style="max-height: 100px;">
                <img src="{{ absolute_url(asset('build/static/IMG_2005_350.png')) }}" alt="illstration"
                     style="max-height: 120px;">
            </div>
        </div>
    </div>

    <div class="offer__content">

        <div class="offer__ref">
            <h1>Offre</h1>

            <div class="flex space-between">

                <div class="w50">
                    <div class="flex offer__ref-items">
                        <div>
                            <p class="bold">Votre demande du :</p>
                        </div>
                        <div>
                            <p>{{ quoteRequest.dateCreation|date('d/m/Y') }}</p>
                        </div>
                    </div>

                    <div class="flex offer__ref-items">
                        <div>
                            <p class="bold">Votre référence :</p>
                        </div>
                        <div>
                            <p> {{ quoteRequest.civility }} {{ quoteRequest.firstName }} {{ quoteRequest.lastName }}</p>
                        </div>
                    </div>

                    <div class="flex offer__ref-items">
                        <div>
                            <p class="bold">Votre adresse email :</p>
                        </div>
                        <div>
                            <p>{{ quoteRequest.email }}</p>
                        </div>
                    </div>

                    <div class="flex offer__ref-items">
                        <div>
                            <p class="bold">Votre no. tel. :</p>
                        </div>
                        <div>
                            <p>{{ quoteRequest.phone }}</p>
                        </div>
                    </div>
                </div>


                <div class="w50">
                    <div class="flex offer__ref-items">
                        <div>
                            <p class="bold">Date de l'offre :</p>
                        </div>
                        <div>
                            <p>{{ date|date('d/m/Y') }}</p>
                        </div>
                    </div>

                    <div class="flex offer__ref-items">
                        <div>
                            <p class="bold">Notre référence :</p>
                        </div>
                        <div>
                            {% if quoteRequest.postalCode is defined %}
                                <p> {{ quoteRequest.postalCode.region }}</p>
                            {% endif %}
                        </div>
                    </div>

                    <div class="flex offer__ref-items">
                        <div>
                            <p class="bold">Notre adresse email :</p>
                        </div>
                        <div>
                            <p>
                                {% if quoteRequest.postalCode is defined %}
                                    {{ quoteRequest.postalCode.region.email }}
                                {% endif %}
                            </p>
                        </div>
                    </div>

                    <div class="flex offer__ref-items">
                        <div>
                            <p class="bold"> Notre no. tel. :</p>
                        </div>
                        <div>
                            <p>041 448 38 62 / 079 841 26 91</p>
                        </div>
                    </div>
                </div>


            </div>
        </div>

        <div class="offer__presta">
            <p class="mb-20">Chère Madame, cher Monsieur,</p>
            <p class="mb-20"> Nous vous remercions de votre demande et vous offrons nos prestations suivantes:</p>
            <h2>Collecte et destruction de vos archives confidentielles </h2>

            <table>
                <tbody>
                <tr>
                    <th rowspan="2">Type RW</th>
                    <th rowspan="2">Serrure</th>
                    <th>
                        Programmation<br>
                        serrure e.l.sy<br>
                        <span>unique/<br>
                        par récipient</span>
                    </th>
                    <th>
                        Location<br>
                        <span>par mois/<br>
                        par récipient<br></span>
                    </th>
                    <th>
                        Transport<br>
                        <span>par récipient collecté</span>
                    </th>
                    <th>
                        Destruction et<br>
                        certificat
                    </th>
                    <th>
                        Fréquence<br>
                        Prévue
                    </th>
                    <th>
                        Prix
                    </th>
                </tr>
                <tr class="table-header">
                    <td>CHF / TVA excl.</td>
                    <td>CHF / TVA excl.</td>
                    <td>CHF / TVA excl.</td>
                    <td>CHF / TVA excl.</td>
                    <td>pc.</td>
                    <td>CHF / TVA excl.</td>
                </tr>

                {% for line in quoteRequest.quoteRequestLines %}
                <tr>
                    <td class="bold">{{ line.product.capacity }}</td>
                    <td class="bold">{{ line.product|productLabelTranslation(locale,'lockType') }}</td>
                    <td class="bold">{{ line.setUpPrice|formatAmount('', app.request.locale) }}</td>
                    <td class="bold">15,00</td>
                    <td class="bold">30,00</td>
                    <td>inclus</td>
                    <td class="bold">1</td>
                    <td class="bold">50</td>
