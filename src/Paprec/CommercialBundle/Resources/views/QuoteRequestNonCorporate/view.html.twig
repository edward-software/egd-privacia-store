{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Commercial.QuoteRequestNonCorporate.View'|trans }}
{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block content_title %}
    {{ 'Commercial.QuoteRequestNonCorporate.Users'|trans }}
{% endblock %}

{% block main_content %}


    <div class="col-md-12">
        <!-- FLASH MESSAGE -->
        <div class="view-box">

            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="alert alert-danger">{{ ('Commercial.QuoteRequestNonCorporate.Error.' ~ flashMessage)|trans }}</div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">{{ ('Commercial.QuoteRequestNonCorporate.Success.' ~ flashMessage)|trans }}</div>
            {% endfor %}
        </div>
        <!-- CARD -->
        <div class="card">
            <div class="card-header">
                <h4>
                    <i class="fa fa-xs fa-quoteRequestNonCorporate"></i> {{ 'Commercial.QuoteRequestNonCorporate.View'|trans }}
                </h4>
                <div class="float-right">
                    <a id="sendQuoteButton" href="javascript:void(0);" class="btn btn-sm btn-success"><i
                                class="fa fa-xs fa-envelope"></i> {{ 'Commercial.QuoteRequestNonCorporate.SendQuote'|trans }}
                    </a>
                    <a href="{{ path("paprec_commercial_quoteRequestNonCorporate_edit", {id: quoteRequestNonCorporate.id}) }}"
                       class="btn btn-sm btn-warning"><i
                                class="fa fa-xs fa-edit"></i> {{ 'Commercial.QuoteRequestNonCorporate.Edit'|trans }}
                    </a>
                    <a id="commmecialQuoteRequestNonCorporateRemoveButton_" href="javascript:void(0);"
                       class="btn btn-sm btn-danger"><i
                                class="fa fa-xs fa-trash"></i> {{ 'Commercial.QuoteRequestNonCorporate.Remove'|trans }}
                    </a>
                </div>
                <div class="float-left">
                    <a href="{{ path('paprec_commercial_quoteRequestNonCorporate_index') }}"
                       class="btn btn-sm btn-default"><i
                                class="fa fa-xs fa-chevron-left"></i> {{ 'Commercial.QuoteRequestNonCorporate.List'|trans }}
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'Commercial.QuoteRequestNonCorporate.Informations-FO'|trans }}</h5>
                        </div>
                        <div class="card-body row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.BusinessName'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequestNonCorporate.businessName }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.LocationsNumber'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequestNonCorporate.locationsNumber }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.ConcernedRegion'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequestNonCorporate.concernedRegion }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.Civility'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequestNonCorporate.civility }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.LastName'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequestNonCorporate.lastName }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.FirstName'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequestNonCorporate.firstName }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.Email'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequestNonCorporate.email }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.Phone'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequestNonCorporate.phone }}
                                    </label>
                                </div>

                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.CustomerType'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequestNonCorporate.customertype }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.Function'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequestNonCorporate.function }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.QuoteStatus'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ ('Commercial.QuoteStatusList.' ~ quoteRequestNonCorporate.quoteStatus)|trans }}
                                    </label>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.Division'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequestNonCorporate.division }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.PostalCode'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequestNonCorporate.postalCode }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.AttachedFiles'|trans }}</label>
                                    <label class="col-form-label">
                                        {% if quoteRequestNonCorporate.attachedFiles %}
                                            <a href="{{ path('paprec_commercial_quoteRequestNonCorporate_downloadAttachedFiles', {id: quoteRequestNonCorporate.id}) }}"><i
                                                        class="fa fa-download"></i></a>
                                        {% endif %}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.Need'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequestNonCorporate.need }}
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 mt-3">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'Commercial.QuoteRequestNonCorporate.Informations-BO'|trans }}</h5>
                        </div>
                        <div class="card-body row">
                            <div class="col-md-6">

                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.GeneratedTurnover'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequestNonCorporate.generatedTurnover|formatAmount('EUR', app.request.locale) }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.Agency'|trans }}</label>
                                    <label class="col-form-label">
                                        {% if quoteRequestNonCorporate.agency %}
                                            <a href="{{ path('paprec_commercial_agence_view', {id: quoteRequestNonCorporate.agency.id}) }}">{{ quoteRequestNonCorporate.agency }}</a>
                                        {% endif %}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.Summary'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequestNonCorporate.summary|nl2br }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.Frequency'|trans }}</label>
                                    <label class="col-form-label">
                                        {% if quoteRequestNonCorporate.frequency == 'regular' %}Régulier {% else %}Ponctuel{% endif %}
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.Tonnage'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequestNonCorporate.tonnage }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.KookaburaNumber'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequestNonCorporate.kookaburaNumber }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.UserInCharge'|trans }}</label>
                                    <label class="col-form-label">
                                        {% if quoteRequestNonCorporate.userInCharge %}
                                            <a href="{{ path('paprec_user_user_view', {id: quoteRequestNonCorporate.userInCharge.id}) }}">{{ quoteRequestNonCorporate.userInCharge }}</a>
                                        {% endif %}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.AssociatedQuote'|trans }}</label>
                                    <label class="col-form-label">
                                        {% if quoteRequestNonCorporate.associatedQuote %}
                                            <a href="{{ path('paprec_commercial_quoteRequestNonCorporate_downloadAssociatedQuote', {id: quoteRequestNonCorporate.id}) }}"><i
                                                        class="fa fa-download"></i></a>
                                        {% else %}
                                            <button class="btn btn-sm btn-outline-primary"
                                                    data-target="#uploadAssociatedQuoteModal" data-toggle="modal"
                                                    id="openModalUploadQuote">
                                                <i class="fa fa-xs fa-plus"></i> {{ 'Commercial.QuoteRequestNonCorporate.AddAssociatedQuote'|trans }}
                                            </button>
                                            <div class="modal fade" id="uploadAssociatedQuoteModal" tabindex="-1"
                                                 role="dialog"
                                                 aria-labelledby="Upload Picture" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered" role="document">
                                                    <div class="modal-content">
                                                        <form id="formAddAssociatedQuote" name="formAddAssociatedQuote"
                                                              action="{{ path("paprec_commercial_quoteRequestNonCorporate_addAssociatedQuote", {id: quoteRequestNonCorporate.id}) }}"
                                                              method="post" enctype="multipart/form-data">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">{{ 'Commercial.QuoteRequestNonCorporate.AddAssociatedQuote'|trans }}
                                                                </h5>
                                                                <button type="button" class="close" data-dismiss="modal"
                                                                        aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="form-group">
                                                                    <div class="form-label">{{ 'Commercial.ChoseFile'|trans }}</div>
                                                                    <div class="form-content">
                                                                        {{ form_widget(formAddAssociatedQuote.associatedQuote, {'attr': {'class': 'form-control'}}) }}
                                                                        {{ form_errors(formAddAssociatedQuote.associatedQuote) }}
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-sm btn-secondary"
                                                                        data-dismiss="modal">
                                                                    {{ 'General.Cancel'|trans }}
                                                                </button>
                                                                <button type="button" class="btn btn-sm btn-primary"
                                                                        id="formAddAssociatedQuoteSubmitButton">
                                                                    {{ 'General.Save'|trans }}
                                                                </button>
                                                            </div>
                                                            {{ form_rest(formAddAssociatedQuote) }}
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 mt-3">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'Commercial.QuoteRequestNonCorporate.System-informations'|trans }}</h5>
                        </div>
                        <div class="card-body">

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.Date-creation'|trans }}</label>
                                <label class="col-form-label">
                                    {{ quoteRequestNonCorporate.dateCreation|localizeddate('short', 'medium', app.request.locale) }}
                                </label>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequestNonCorporate.Date-update'|trans }}</label>
                                <label class="col-form-label">
                                    {{ quoteRequestNonCorporate.dateUpdate is empty ? "" : quoteRequestNonCorporate.dateUpdate|localizeddate('short', 'medium', app.request.locale) }}
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

        {% block javascripts %}
            <script>
                $(function () {

                    $('#commmecialQuoteRequestNonCorporateRemoveButton_').on('click', function () {

                        var url = "{{ path("paprec_commercial_quoteRequestNonCorporate_remove", {id: quoteRequestNonCorporate.id}) }}";

                        Swal({
                            title: "{{ 'General.Confirm'|trans }}",
                            text: "{{ 'Commercial.QuoteRequestNonCorporate.Confirm-remove'|trans }}",
                            showCancelButton: true,
                            confirmButtonText: "{{ 'General.Yes'|trans }}",
                            cancelButtonText: "{{ 'General.No'|trans }}"
                        }).then((result) => {
                            if (result.value) {
                                $(location).attr('href', url);
                            }
                        });

                    });

                    $('#formAddAssociatedQuoteSubmitButton').on('click', function () {
                        $('#formAddAssociatedQuote').submit();
                    });

                    $('#sendQuoteButton').on('click', function () {
                        var url = "{{ path("paprec_commercial_quoteRequestNonCorporate_sendAssociatedQuote", {id: quoteRequestNonCorporate.id}) }}";

                        Swal({
                            title: "{{ 'General.Confirm'|trans }}",
                            text: "{{ 'Commercial.QuoteRequestNonCorporate.Confirm-send-quote'|trans }}",
                            showCancelButton: true,
                            confirmButtonText: "{{ 'General.Yes'|trans }}",
                            cancelButtonText: "{{ 'General.No'|trans }}"
                        }).then((result) => {
                            if (result.value) {
                                $(location).attr('href', url);
                            }
                        });
                    })


                });
            </script>
        {% endblock %}
