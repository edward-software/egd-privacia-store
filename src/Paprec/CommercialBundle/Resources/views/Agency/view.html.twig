{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Commercial.Agency.View'|trans }}
{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block content_title %}
    {{ 'Commercial.Agency.Agencies'|trans }}
{% endblock %}

{% block main_content %}


    <div class="col-md-12">
        <!-- CARD -->
        <div class="card">
            <div class="card-header">
                <h4>
                    <i class="fa fa-xs fa-folder"></i> {{ 'Commercial.Agency.View'|trans }}
                </h4>
                <div class="float-right">
                    <a href="{{ path("paprec_commercial_agence_edit", {id: agency.id}) }}"
                       class="btn btn-sm btn-warning"><i
                                class="fa fa-xs fa-edit"></i> {{ 'Commercial.Agency.Edit'|trans }}</a>
                    <a id="commercialAgenceRemoveButton" href="javascript:void(0);" class="btn btn-sm btn-danger"><i
                                class="fa fa-xs fa-trash"></i> {{ 'Commercial.Agency.Remove'|trans }}</a>
                </div>
                <div class="float-left">
                    <a href="{{ path('paprec_commercial_agence_index') }}" class="btn btn-sm btn-default"><i
                                class="fa fa-xs fa-chevron-left"></i> {{ 'Commercial.Agency.List'|trans }}</a>
                </div>
            </div>
            <div class="card-body">
                <div class="col-md-7">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'Commercial.Agency.Informations'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Commercial.Agency.Name'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ agency.name }}
                                </label>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Commercial.Agency.Address'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ agency.address|nl2br }}
                                </label>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Commercial.Agency.PostalCode'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ agency.postalCode }}
                                </label>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Commercial.Agency.City'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ agency.city }}
                                </label>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Commercial.Agency.Phone'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ agency.phoneNumber }}
                                </label>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Commercial.Agency.Latitude'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ agency.latitude }}
                                </label>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Commercial.Agency.Longitude'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ agency.longitude }}
                                </label>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Commercial.Agency.Divisions'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {% for division in agency.divisions %}
                                        {{ division|trans }}<br>
                                    {% endfor %}
                                </label>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Commercial.Agency.IsDisplayed'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {% if agency.isDisplayed == 1 %}Oui{% else %}Non{% endif %}
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-7 mt-3">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'Commercial.Agency.System-informations'|trans }}</h5>
                        </div>
                        <div class="card-body">

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Commercial.Agency.Date-creation'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ agency.dateCreation|localizeddate('short', 'medium', app.request.locale) }}
                                </label>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Commercial.Agency.Date-update'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ agency.dateUpdate is empty ? "" : agency.dateUpdate|localizeddate('short', 'medium', app.request.locale) }}
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

        {% block javascripts %}

            <script>
                $(function () {

                    $('#commercialAgenceRemoveButton').on('click', function () {

                        var url = "{{ path("paprec_commercial_agence_remove", {id: agency.id}) }}";

                        Swal({
                            title: "{{ 'General.Confirm'|trans }}",
                            text: "{{ 'Commercial.Agency.Confirm-remove'|trans }}",
                            showCancelButton: true,
                            confirmButtonText: "{{ 'General.Yes'|trans }}",
                            cancelButtonText: "{{ 'General.No'|trans }}"
                        }).then((result) => {
                            if (result.value) {
                                $(location).attr('href', url);
                            }
                        });

                    });
                });
            </script>
        {% endblock %}
