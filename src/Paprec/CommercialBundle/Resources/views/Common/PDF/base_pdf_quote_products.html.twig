{% extends "@PaprecCommercial/Common/PDF/base_pdf.html.twig" %}

{% block pdf_content %}
    <table width="780" cellpadding="0" cellspacing="0" align="center" style="font-size: 13px">
        <tr>
            <td style="height: 75px"></td>
        </tr>
        <tr>
            <td style="text-align: right">
                <img style="margin-right: -40px; width: 68px" src="{{ absolute_url(asset('build/static/terre_logo.png')) }}" alt="">
            </td>
        </tr>
        <tr>
            <td>
                <table width="100%" cellpadding="0" cellspacing="0">

                    <tr>
                        <td>
                            <p style="line-height: 15px; margin: 20px; text-align: left;">
                                Vous trouverez ci-dessous la composition de votre estimation tarifaire.
                            </p>
                            <p style="line-height: 15px; margin: 20px; text-align: left;">
                                L’adresse de la demande de prestation :
                            </p>
                            <p style="line-height: 15px; margin: 20px; text-align: left;">
                                {% block address %}{% endblock %}
                            </p>
                            <p style="line-height: 15px; margin: 20px; text-align: left;">
                                Un forfait Recyclage comprenant la collecte, le traitement en centre de tri et la mise à
                                disposition du materiel indiqué ci-après :
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div style="line-height: 15px; margin: 20px; text-align: left;">
                                {% block products %}{% endblock %}
                            </div>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>

    </table>
{% endblock %}
