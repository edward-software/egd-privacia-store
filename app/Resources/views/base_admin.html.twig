                                    {% endif %}
                                    {% if is_granted('ROLE_ADMIN') or paprec_has_access('ROLE_MANAGER_DIVISION', 'D3E') %}
                                        <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_catalog_productD3E'|length) == 'paprec_catalog_productD3E' %} active{% endif %}"
                                           href="{{ path('paprec_catalog_productD3E_index') }}">{{ 'Catalog.D3E'|trans }}</a>
                                    {% endif %}
                                    {% if is_granted('ROLE_ADMIN') or paprec_has_access('ROLE_MANAGER_DIVISION', 'D3E') %}
                                        <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_catalog_type'|length) == 'paprec_catalog_type' %} active{% endif %}"
                                           href="{{ path('paprec_catalog_type_index') }}">{{ 'Catalog.Type.D3E'|trans }}</a>
                                    {% endif %}
                                </div>
                            </div>
                            {% if is_granted('ROLE_ADMIN') or paprec_has_access('ROLE_MANAGER_DIVISION', 'D3E') %}
                                <div class="dropdown-submenu">
                                    <div tabindex="-1" class="dropdown-item">{{ 'Catalog.PriceList'|trans }}</div>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_catalog_priceListD3E'|length) == 'paprec_catalog_priceListD3E' %} active{% endif %}"
                                           href="{{ path('paprec_catalog_priceListD3E_index') }}">{{ 'Catalog.D3E'|trans }}</a>
                                    </div>
                                </div>
                            {% endif %}
                            <div class="dropdown-submenu">
                                <div tabindex="-1" class="dropdown-item">{{ 'Catalog.Settings'|trans }}</div>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_catalog_category'|length) == 'paprec_catalog_category' %} active{% endif %}"
                                       href="{{ path('paprec_catalog_category_index') }}">{{ 'Catalog.Category.Categories'|trans }}</a>
                                    <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_catalog_argument'|length) == 'paprec_catalog_argument' %} active{% endif %}"
                                       href="{{ path('paprec_catalog_argument_index') }}">{{ 'Catalog.Argument.Arguments'|trans }}</a>
                                    <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_catalog_postalCode'|length) == 'paprec_catalog_postalCode' %} active{% endif %}"
                                       href="{{ path('paprec_catalog_postalCode_index') }}">{{ 'Catalog.PostalCode.PostalCodes'|trans }}</a>
                                    <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_catalog_customizableArea'|length) == 'paprec_catalog_customizableArea' %} active{% endif %}"
                                       href="{{ path('paprec_catalog_customizableArea_index') }}">{{ 'Catalog.CustomizableArea.CustomizableAreas'|trans }}</a>
                                </div>
                            </div>
                        </div>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_COMMERCIAL_DIVISION') %}
