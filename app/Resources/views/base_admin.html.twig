                                           href="{{ path('paprec_commercial_productD3EQuote_index') }}">{{ 'Commercial.D3E'|trans }}</a>
                                    {% endif %}
                                    <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_commercial_quoteRequest'|length) == 'paprec_commercial_quoteRequest' and  app.request.get('_route')|slice(0, 'paprec_commercial_quoteRequestNonCorporate'|length) != 'paprec_commercial_quoteRequestNonCorporate' %} active{% endif %}"
                                       href="{{ path('paprec_commercial_quoteRequest_index') }}">{{ 'Commercial.CorpQuoteRequests'|trans }}</a>
                                    <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_commercial_quoteRequestNonCorporate'|length) == 'paprec_commercial_quoteRequestNonCorporate' %} active{% endif %}"
                                       href="{{ path('paprec_commercial_quoteRequestNonCorporate_index') }}">{{ 'Commercial.NonCorpQuoteRequests'|trans }}</a>
                                </div>
                            </div>
                            <div class="dropdown-submenu">
                                <div tabindex="-1" class="dropdown-item">{{ 'Commercial.Requests'|trans }}</div>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_commercial_contactUs'|length) == 'paprec_commercial_contactUs' %} active{% endif %}"
                                       href="{{ path('paprec_commercial_contactUs_index') }}">{{ 'Commercial.Contact'|trans }}</a>
                                    <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_commercial_callBack'|length) == 'paprec_commercial_callBack' %} active{% endif %}"
                                       href="{{ path('paprec_commercial_callBack_index') }}">{{ 'Commercial.Callback'|trans }}</a>
                                </div>
                            </div>
                            <div class="dropdown-submenu">
                                <div tabindex="-1" class="dropdown-item">{{ 'Commercial.Settings'|trans }}</div>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_commercial_agence'|length) == 'paprec_commercial_agence' %} active{% endif %}"
